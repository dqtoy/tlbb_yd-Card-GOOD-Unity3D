<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pay_activity_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="游戏ID："
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="5003" 
                android:visibility="gone"
                android:enabled="false"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="游戏名称："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"
                android:text="天龙八部" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="服务器ID："
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGroupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="1001" 
                android:visibility="gone"
                android:enabled="false" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="服务器名称："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="世外桃源" 
                android:enabled="false" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="商品ID："
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGoodsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="10000" 
                android:visibility="gone"
                android:enabled="false"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="商品名称："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="钻石"  
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="商品数量："
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGoodsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10"
                android:visibility="gone"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="商品价格(元)："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGoodsRealPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10000"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="商品市场价格(元)："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainGoodsMarketPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="10000"  
                android:enabled="false"/>
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="用户名："
                android:textStyle="bold" />

            <EditText
                android:id="@+id/psMainUid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="yyd@changyou.com"
                android:enabled="false"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="支付方式："
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/psMainPayWayGR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="支付方式"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingTop="3dp" >

            <RadioButton
                android:id="@+id/psMainAlipayRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:visibility="gone"
                android:text="支付宝支付" />

            <RadioButton
                android:id="@+id/psMainPhoneRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="手机卡支付" />
        </RadioGroup>

        <Button
            android:id="@+id/psMainPayBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paysdk_button_selector"
            android:text="充值" />
    </LinearLayout>

</ScrollView>